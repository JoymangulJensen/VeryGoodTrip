{% extends "layout.html.twig" %}

{% block title %}{{ trip.name }}{% endblock %}

{% block content %}

    <div class="card hovercard">
        <div class="card-background">
            <img class="card-bkimg" src="{{ app.request.basepath }}/{{ trip.image }}" alt="">
        </div>
        <div class="useravatar">
            <img src="{{ app.request.basepath }}/{{ trip.image }}" alt="Smiley face" id="trip_img">
        </div>
        <div class="card-info"> <span class="card-title">{{ trip.name }}</span>

        </div>
    </div>
    <div class="row">
        <div class="col-md-1 col-sm-1 ">

        </div>
        <div class="col-md-8 col-sm-8 ">
            <h3 class="pull-right">{{ trip.price }} â‚¬</h3>
            <h3>{{ trip.name }}</h3>
            <p>{{ trip.description }}</p>
            <p>{{  trip.category.name }}</p>
        </div>
        <div class="col-md-2 col-md-offset-1 col-sm-2 col-sm-offset-1">
            <br/>
            <br/>
            <a href="{{ path('addcart', { 'id': trip.id}) }}" class="btn btn-info active">Ajouter au Panier<i class="glyphicon glyphicon-shopping-cart"></i></a>
        </div>
    </div>



    <h3>Comments</h3>
    {% for review in reviews %}
        <strong>{{ review.user.username }}</strong> said : {{ review.content }}<br>
    {% else %}
        No comments yet.
    {% endfor %}

    <h3>Add a comment</h3>
    {% if reviewForm %}
        {{ form_start(reviewForm) }}
        <div class="form-group">
            {{ form_errors(reviewForm.content) }}
            {{ form_widget(reviewForm.content, { 'attr':  {
                'rows': '4',
                'class': 'form-control',
                'placeholder': 'Enter your comment'
            }}) }}
        </div>
        <div class="col-sm-6">
            {{ form_errors(reviewForm.rating) }}
            {{ form_widget(reviewForm.rating, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Publish comment" />
        </div>
        {{ form_end(reviewForm) }}

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% else %}
        <a href="{{ path('login') }} ">Log in</a> to add comments.
    {% endif %}
{% endblock %}