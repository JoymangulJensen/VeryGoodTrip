{% extends "layout.html.twig" %}

{% block title %}{{ category.name }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="">
            <h3>{{ category.name }}</h3>
            <p><img src="{{ app.request.basepath }}/{{ category.image }}" class="img-responsive center-block" alt=""></p>
            <p>{{ category.description }}</p>
        </div>
    </div>

    <div class="row">
        <div class="">
            <hr>
            <h3>List of the trips</h3>
            {% for trip in trips %}
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <a href="{{ path('trip', { 'id': trip.id }) }}"><img src="{{ app.request.basepath }}/{{ trip.image }}" alt=""></a>
                        <div class="caption">
                            <h4 class="pull-right">{{ trip.price }} â‚¬</h4>
                            <h4><a href="{{ path('trip', { 'id': trip.id }) }}">{{ trip.name }}</a>
                            </h4>
                            <p>{{ trip.description|truncate(140) }} </p>
                        </div>
                    </div>
                </div>
            {% else %}
                No Trips yet.
            {% endfor %}
        </div>
    </div>

{% endblock %}