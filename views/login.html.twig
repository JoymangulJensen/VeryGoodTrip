{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2 class="text-center">{{ block('title') }}</h2>
                {% if error %}
                    <div class="alert alert-danger">
                        <strong>Erreur de connexion!</strong> {{ error }}
                    </div>
                {% endif %}

                <div class="account-wall">
                    <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                         alt="">
                    <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
                        <div class="form-group has-feedback has-feedback-left">
                        <div class="col-md-10 col-md-offset-1">
                            <input type="text" name="_username" value="{{ last_username }}" class="form-control input-lg" placeholder="Enter your username" required autofocus>
                            <i class="glyphicon glyphicon-user form-control-feedback"></i>
                        </div>
                            </div>

                        <div class="form-group has-feedback has-feedback-left">
                        <div class="col-md-10 col-md-offset-1">
                            <input type="password" name="_password" class="form-control input-lg" placeholder="Enter your password" required>
                            <i class="glyphicon glyphicon-lock form-control-feedback"></i>
                        </div>
                            </div>


                        <div class="col-md-10 col-md-offset-1">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Sign in</button>
                        </div>
                        <div class="col-md-10 col-md-offset-1">
                            <label class="checkbox pull-left">
                                <input type="checkbox" value="remember-me">
                                Remember me
                            </label>
                            </div>

                           <span class="clearfix"></span>
                    </form>
                </div>
                <div class="col-md-12" style="text-align:center">
                    <a href="#">Create an account </a>
                </div>
            </div>
        </div>
    </div>






{% endblock %}