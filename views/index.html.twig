{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Cat√©gorie</p>
                <div class="list-group">
                    {% for category,count in categories %}
                        <a href="#" class="list-group-item">{{ category }} ({{ count }})</a>
                    {% endfor %}
                </div>
            </div>

            <div class="col-md-9">
                {% for trip in trips %}
                    <p class="lead"><a class="articleTitle" href="{{ path('trip', { 'id': trip.id }) }}">{{ trip.name }}</a></p>
                    <p>{{ trip.description }}</p>
                    <p>{{ trip.price }}</p>
                    <p>{{ trip.category }}</p>
                    <p>{{ trip.image }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- /.container -->
{% endblock %}